---
import "../styles/global.css";
import Navbar from '../components/Navbar.astro';
const title = "Hamidah's Super Fantastic Uganda Travel Services";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    
    <!-- Hero Section -->
    <header>
      <h1>Welcome to {title}</h1>
      <p>
        Your guide to eco-tourism, adventure, and local culture in Uganda
      </p>
    </header>

    <!-- Main Content -->
    <main style="padding: 2rem;">
      <section>
        <h2>Explore Destinations</h2>
        <p>Discover Uganda’s national parks, cultural experiences, and hidden gems.</p>
        <a href={"/uganda-travel-service/destinations"} class="button">Explore Destinations! →</a>
      </section>

      <section>
        <h2>Plan Your Adventure</h2>
        <p>Get tips, guides, and relocation advice to make your trip unforgettable.</p>
        <a href={"/uganda-travel-service/plan"} class="button">Plan Your Adventure! →</a>
      </section>

	  <section>
		<h2>Book Your Trip</h2>
		<p>Securely pay for your Uganda adventure through Stripe.</p>
		<button id="checkout-button" class="button">Pay Now</button>

		<script type="module">
			const button = document.getElementById("checkout-button");
			button.addEventListener("click", async () => {
    			const res = await fetch("uganda-travel-service/ap/create-checkout-session", { method: "POST" });
    			const data = await res.json();
			if (data.url) {
				window.location.href = data.url;
			} else {
				alert("Something went wrong.");
			}
			});
		</script>
	</section>
    </main>

    <!-- Footer -->
    <footer>
      <p>© 2025 Uganda Travel Services</p>
      <img src="/uganda-travel-service/uganda-flag.svg"  alt="Ugandan Flag - A crested crane on a field of Red, Yellow, and Black" width="200" />
    </footer>
  </body>
</html>